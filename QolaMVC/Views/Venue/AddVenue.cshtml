@model QolaMVC.Models.NEW_VenueModel

@RenderPage("~/Views/Shared/_Header.cshtml")
@RenderPage("~/Views/Shared/_SideBar.cshtml")
<style>

    .form-tabs .nav-link {
        font-size: 1rem;
    }

    .modal-xlg {
        width: 900px !important;
        max-width: 1000px !important;
    }
</style>
<!-- START PAGE-CONTAINER -->
<div class="page-container">

    @RenderPage("~/Views/Shared/_NavBar.cshtml")

    <div class="page-content-wrapper">
        <!-- START PAGE CONTENT -->
        <div class="content">
            <!-- START JUMBOTRON -->
            <div class="jumbotron w-100" style="position: fixed; z-index: 400">
                <div class="container-fluid container-fixed-lg">
                    <!-- <div class="inner"> -->
                    <div class="row align-items-center">
                        <div class="col-md-9">
                            <h3>Add Venue</h3>
                        </div>
                    </div>
                    <!-- </div> -->
                </div>
            </div>
            <!-- END JUMBOTRON -->

            <div style="height: 60px;"></div>

            <!-- START CONTAINER FLUID -->
            <div class="container-fluid container-fixed-lg">
                <!-- BEGIN PlACE PAGE CONTENT HERE -->


                <div class="card">
                    <div class="card-block">

                        <div class="row">
                            <div class="col-md-8 offset-md-2">
                                @using (Html.BeginForm("AddVenue", "Venue", new { p_ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "p-t-15", @role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                <div class="row">

                                    <div class="col-md-6" style="padding-left:7px !important;">
                                        <div class="form-group">
                                            <label for="staticEmail" class="col-form-label">Home*</label>
                                            <select name="Home" class="form-control">
                                                @{
                                                    foreach (var l_Home in (IEnumerable<QolaMVC.Models.HomeModel>)ViewBag.Homes)
                                                    {
                                                        if (Model != null && Model.Home == l_Home.Name)
                                                        {
                                                            <option value="@l_Home.Id" selected>@l_Home.Name</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@l_Home.Id">@l_Home.Name</option>
                                                        }
                                                    }
                                                }
                                            </select>
                                            @Html.ValidationMessageFor(m => m.Home, null, new { @style = "color: red; font-style: italic;" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="staticEmail" class="col-form-label">Venue*</label>
                                            @Html.TextBoxFor(m => m.Venue, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Venue, null, new { @style = "color: red; font-style: italic;" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="staticEmail" class="col-form-label">Code*</label>
                                            @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Code, null, new { @style = "color: red; font-style: italic;" })
                                        </div>
                                    </div>

                                </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <input type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("List", "Venue")'" value="Back">
                                            <button class="btn btn-danger btn-lg">SAVE</button>

                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>


                <!-- END PLACE PAGE CONTENT HERE -->
            </div>
            <!-- END CONTAINER FLUID -->
        </div>
        <!-- END PAGE CONTENT -->




        @RenderPage("~/Views/Shared/_Footer.cshtml")
