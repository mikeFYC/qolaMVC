@model IEnumerable<QolaMVC.Models.DietaryAllergyReportModel>

@RenderPage("~/Views/Shared/_Header.cshtml")
@RenderPage("~/Views/Shared/_SideBar.cshtml")
<style>

    .form-tabs .nav-link {
        font-size: 1rem;
    }

    .modal-xlg {
        width: 900px !important;
        max-width: 1000px !important;
    }
</style>
<!-- START PAGE-CONTAINER -->
<div class="page-container">

    @RenderPage("~/Views/Shared/_NavBar.cshtml")

    <!-- START PAGE CONTENT WRAPPER -->
    <div class="page-content-wrapper">
        <!-- START PAGE CONTENT -->
        <div class="content">
            <!-- START JUMBOTRON -->
            <div class="jumbotron w-100" style="position: fixed; z-index: 400">
                <div class="container-fluid container-fixed-lg">
                    <!-- <div class="inner"> -->
                    <div class="row align-items-center">
                        <div class="col-md-9">
                            <h3>Allergy</h3>
                        </div>
                        <div class="col-md-3">
                            <a href="/HomeReports/" class="btn btn-primary"><i class="fa fa-backward"></i> Back</a>
                            <button class="btn btn-danger" onclick="Print_PDF_Click()"><i class="fa fa-file-pdf-o"></i> Print</button>
                        </div>
                    </div>
                    <!-- </div> -->
                </div>
            </div>
            <!-- END JUMBOTRON -->

            <div style="height: 60px;"></div>

            <!-- START CONTAINER FLUID -->
            <div class="container-fluid container-fixed-lg">
                <!-- BEGIN PlACE PAGE CONTENT HERE -->
                <div class="row">
                    <div class="col-md-8 py-4 text-left">
                        <div class="form-inline">
                            <div class="input-group">
                                <label>&nbsp;Sort By:&nbsp;</label>
                                <select id="SortById" class="form-control">
                                    <option value="1">Suite No</option>
                                    <option value="2">Name</option>
                                    <option value="3">Assessed Date</option>
                                </select>
                            </div>
                            <div class="input-group">
                                <label>&nbsp;Search By:&nbsp;</label>
                                <input id="SearchById" class="form-control" value="" />
                            </div>
                            <button id="View_Button" type="button" class="btn btn-primary" style="margin-left:1%;" onclick="View_Button_Click()">View</button>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-block">
                        <table class="table table-bordered">
                            <thead class="bg-primary">
                                <tr>
                                    <th class="text-white">Allergy Name</th>
                                    <th class="text-white">Suite</th>
                                    <th class="text-white">Resident Name</th>
                                    <th class="text-white">Assessed Date</th>
                                    <th class="text-white">Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var m in Model) {
                                    <tr>
                                        <td class="align-middle">@m.Allergy.Name </td>
                                        <td class="align-middle">@m.Suite.SuiteNo</td>
                                        <td class="align-middle">@m.Resident.ShortName</td>
                                        <td class="align-middle">@m.DateEntered</td>
                                        <td class="align-middle"></td>
                                    </tr>
                                    }
                            </tbody>
                        </table>
                    </div>
                </div>


                <!-- END PLACE PAGE CONTENT HERE -->
            </div>
            <!-- END CONTAINER FLUID -->
        </div>
        <!-- END PAGE CONTENT -->


        @RenderPage("~/Views/Shared/_Footer.cshtml")
