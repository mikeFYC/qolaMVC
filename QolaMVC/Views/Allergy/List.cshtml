@model List<QolaMVC.Models.NEW_AllergyModel>
@RenderPage("~/Views/Shared/_Header.cshtml")
@RenderPage("~/Views/Shared/_SideBar.cshtml")
<style>
    .form-tabs .nav-link {
        font-size: 1rem;
    }

    .modal-xlg {
        width: 900px !important;
        max-width: 1000px !important;
    }
</style>
<!-- START PAGE-CONTAINER -->
<div class="page-container">

    @RenderPage("~/Views/Shared/_NavBar.cshtml")

    <!-- START PAGE CONTENT WRAPPER -->
    <div class="page-content-wrapper">
        <!-- START PAGE CONTENT -->
        <div class="content">
            <!-- START JUMBOTRON -->
            <div class="jumbotron w-100" style="position: fixed; z-index: 400">
                <div class="container-fluid container-fixed-lg">
                    <!-- <div class="inner"> -->
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h3>@QolaMVC.Resources.Text.Allergy</h3>
                        </div>
                    </div>
                    <!-- </div> -->
                </div>
            </div>
            <!-- END JUMBOTRON -->

            <div style="height: 60px;"></div>

            <!-- START CONTAINER FLUID -->
            <div class="container-fluid container-fixed-lg">
                <!-- BEGIN PlACE PAGE CONTENT HERE -->

                <div class="card">
                    <div class="card-block">

                        <div class="form-tabs mt-4">
                          
                            <div class="tab-content" id="pills-tabContent">
                                <div class="tab-pane fade show active" id="pills-active" role="tabpanel" aria-labelledby="pills-active-tab">

                                    <div class="row">
                                        <div class="py-4 text-left" style="display:inline-block;width:80%;">
                                            <form class="form-inline">
                                            @using (Html.BeginForm("List", "Allergy", FormMethod.Get))
                                            {
                                                <div class="form-group pr-1">
                                                    @*<div class="input-group">
                                                        <select class="form-control" name="column" id="column">
                                                            <option value="*">All fields</option>
                                                            <option value="0">Allergy Name</option>
                                                            <option value="1">Category</option>
                                                        </select>
                                                    </div>*@
                                                    <div class="input-group">
                                                        @*@Html.TextBox("value", null, new { @class = "form-control", @placeholder = "Search for" })*@
                                                        <input class="form-control" id="search_value" value="" />
                                                    </div>
                                                </div>
                                                <button type="button" class="btn btn-danger" onclick="search_Allergy()">@QolaMVC.Resources.Text.Search</button>
                                            }
                                            </form>
                                        </div>
                                        <div class="py-4 text-right" style="display:inline-block;width:15%;">
                                            <a class="btn btn-lg btn-primary" href="~/Allergy/AddAllergy">@QolaMVC.Resources.Text.AddNew</a>
                                        </div>
                                    </div>

                                    <table class="table table-bordered">
                                        <thead class="bg-primary">
                                            <tr>
                                                <th class="text-white">@QolaMVC.Resources.Text.SN</th>
                                                <th class="text-white">@QolaMVC.Resources.Text.AllergyName</th>
                                                <th class="text-white">@QolaMVC.Resources.Text.Category</th>
                                                <th class="text-white">@QolaMVC.Resources.Text.Edit</th>
                                                <th class="text-white">@QolaMVC.Resources.Text.Delete_small</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{ int i = 1; }
                                            @{ foreach (var data in Model)
                                                {
                                                    <tr>
                                                        <td class="align-middle">@i</td>
                                                        <td class="align-middle">@data.Allergy_Name</td>
                                                        <td class="align-middle">@data.Category</td>
                                                        <td class="align-middle">
                                                            <a class="btn btn-success btn-xs" href="~/Allergy/EditAllergy/@data.Id">
                                                                <i class="fa fa-pencil"></i>
                                                            </a>
                                                            @*@Html.ActionLink("Edit Allergy", "EditAllergy", new { id = data.Id })*@
                                                        </td>
                                                        <td class="align-middle">

                                                            <a class="btn btn-danger btn-xs" href="~/Allergy/DeleteAllergy/@data.Id">
                                                                <i class="fa fa-trash-o"></i>
                                                            </a>
                                                         @*   @Html.ActionLink("Delete Allergy", "DeleteAllergy", new { id = data.Id })*@
                                                        </td>
                                                    </tr>

                                                    i = i + 1;
                                                }
                                            }
                                        </tbody>
                                    </table>

                                </div>

                            </div>
                        </div>

                    </div>
                </div>


                <!-- END PLACE PAGE CONTENT HERE -->
            </div>
            <!-- END CONTAINER FLUID -->
        </div>
        <!-- END PAGE CONTENT -->


        @RenderPage("~/Views/Shared/_Footer.cshtml")

        <script>
            function search_Allergy() {
                var a = $('#search_value').val();
                window.location.href = "/Allergy/List?search=" + a;
            }
        </script>