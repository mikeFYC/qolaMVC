@RenderPage("~/Views/Shared/_Header.cshtml")
@RenderPage("~/Views/Shared/_SideBar.cshtml")
<style>

    .form-tabs .nav-link {
        font-size: 1rem;
    }

    .modal-xlg {
        width: 900px !important;
        max-width: 1000px !important;
    }
</style>
<!-- START PAGE-CONTAINER -->
<div class="page-container">

    @RenderPage("~/Views/Shared/_NavBar.cshtml")
    <!-- START PAGE CONTENT WRAPPER -->
    <div class="page-content-wrapper">
        <!-- START PAGE CONTENT -->
        <div class="content">
            <!-- START JUMBOTRON -->
            <div class="jumbotron w-100" style="position: fixed; z-index: 400">
                <div class="container-fluid container-fixed-lg">
                    <!-- <div class="inner"> -->
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h3>Dietary Assessment</h3>
                        </div>
                    </div>
                    <!-- </div> -->
                </div>
            </div>
            <!-- END JUMBOTRON -->
            <div style="height: 60px;"></div>
            <!-- START CONTAINER FLUID -->
            <div class="container-fluid container-fixed-lg">
                <!-- BEGIN PlACE PAGE CONTENT HERE -->
                <div class="card">
                    <div class="card-block">
                        <div class="col-md-12">
                            <h5>Nutrition</h5>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="staticEmail" class="col-form-label">Appetite</label>
                                    <select class="form-control">
                                        <option>Select</option>
                                        <option>Good</option>
                                        <option>Fair</option>
                                        <option>Poor</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="staticEmail" class="col-form-label">Nutritional Status</label>
                                    <select class="form-control">
                                        <option selected="selected" value="0">Select</option>
                                        <option value="10SI">Independent</option>
                                        <option value="11SS">Supervised</option>
                                        <option value="12SA">Assisted</option>
                                        <option value="13SD">Dependant</option>
                                        <option value="15TS4">SL4</option>
                                        <option value="16SD4">SL4D</option>
                                        <option value="17TP">Private (Supportive)</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="staticEmail" class="col-form-label">Risk</label>
                                    <select class="form-control">
                                        <option selected="selected" value="0">Select</option>
                                        <option value="11NN">N/A</option>
                                        <option value="3NS">Swallowing</option>
                                        <option value="4NH">Choking risk</option>
                                        <option value="2NC">Difficulty in Chewing</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="staticEmail" class="col-form-label">Assistive Devices</label>
                                    <input type="text" class="form-control" id="staticEmail">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <h5>Diet</h5>
                            </div>

                            <br>
                            <div class="col-md-3 pads">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                    <label class="form-check-label" for="defaultCheck1">
                                        Regular Diet
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                    <label class="form-check-label" for="defaultCheck1">
                                        Diabetic
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                    <label class="form-check-label" for="defaultCheck1">
                                        Low Fat
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3 pads">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                    <label class="form-check-label" for="defaultCheck1">
                                        Low Cholesterol
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                    <label class="form-check-label" for="defaultCheck1">
                                        Low Potassium
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                    <label class="form-check-label" for="defaultCheck1">
                                        Gluten Free
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3 pads">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                    <label class="form-check-label" for="defaultCheck1">
                                        Vegetarian Diet
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                    <label class="form-check-label" for="defaultCheck1">
                                        Low Sodium
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                    <label class="form-check-label" for="defaultCheck1">
                                        Low Vitamin K
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check pads">
                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                    <label class="form-check-label" for="defaultCheck1">
                                        Other
                                    </label>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="staticEmail">
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="staticEmail" class="col-form-label">Texture</label>
                                    <select class="form-control">
                                        <option selected="selected" value="0">Select</option>
                                        <option value="11NN">N/A</option>
                                        <option value="3NS">Swallowing</option>
                                        <option value="4NH">Choking risk</option>
                                        <option value="2NC">Difficulty in Chewing</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="staticEmail" class="col-form-label">Other</label>
                                    <input type="text" class="form-control" id="staticEmail">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <h5>Allergies/Sensitivities</h5>
                            </div>
                            <div class="col-md-12">
                                <div class="form-check pads">
                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                    <label class="form-check-label" for="defaultCheck1">
                                        No Allergy
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group row">
                                    <label for="staticEmail" class="col-md-3 col-form-label">Allergies/Sensitivities</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" id="staticEmail">
                                    </div>
                                    <div class="col-md-1">
                                        <button type="submit" class="btn btn-danger">ADD</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <h5>Diet Allergy</h5>
