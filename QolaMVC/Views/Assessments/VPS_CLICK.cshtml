<script>
    

    $("input[type='radio']").click(function () {
        var a = $("input[type='radio']");
        var total = 0;
        for (var b = 0; b < a.length; b++) {
            if (a[b].checked == true) {
                total += parseInt(a[b].id)
            }
        }
        $(".TotalScore").text(total.toString());
        //$(".TotalScore").val(total);
    });



</script>