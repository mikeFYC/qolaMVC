@model QolaMVC.Models.ActivityAssessmentCollectionViewModel
@RenderPage("~/Views/Shared/_Header.cshtml")
@RenderPage("~/Views/Shared/_SideBar.cshtml")
<style>

    .form-tabs .nav-link {
        font-size: 1rem;
    }

    .modal-xlg {
        width: 900px !important;
        max-width: 1000px !important;
    }
</style>
<!-- START PAGE-CONTAINER -->
<div class="page-container">

    @RenderPage("~/Views/Shared/_NavBar.cshtml")

    <div class="page-content-wrapper">
        <div class="content">
            <!-- START JUMBOTRON -->
            <div class="jumbotron w-100" style="position: fixed; z-index: 400">
                <div class="container-fluid container-fixed-lg">
                    <!-- <div class="inner"> -->
                    <div class="row align-items-center">
                        <div class="col-md-9">
                            <h3>Activity Assessment</h3>
                        </div>
                        <div class="col-md-2">
                            <a href="~/Assessments/" class="btn btn-primary"><i class="fa fa-backward"></i> Back</a>
                            <button class="btn btn-primary print" id="AA_PRINT"><i class="fa fa-file-pdf-o"></i> Print</button>
                        </div>
                        <!-- <div class="col-md-2 text-right">
        <h4 class="text-danger bold pr-3">
            31
            <small>Residents</small>
        </h4>
    </div> -->
                    </div>
                    <!-- </div> -->
                </div>
            </div>
            <!-- END JUMBOTRON -->

            <div style="height: 60px;"></div>

            <!-- START CONTAINER FLUID -->
            <div class="container-fluid container-fixed-lg" id="fromHTMLtestdiv">
                <!-- BEGIN PlACE PAGE CONTENT HERE -->
              
                <div class="card">
                    <div class="card-block">
                        <div class="row" id="AA_firstrow">
                            <div class="col-md-8">
                                <p style="font-size:1.1vw;font-weight:bold;color:red">P = Past Interest    C = Current Interest   W = Would Like to Learn/Do</p>

                                @*<input type="reset" form="AssessmentForm" class="btn btn-primary" value="Clear" />*@
                            </div>
                            <div class="col-md-4">
                                <div class="row">

                                    <div class="col-md-12 text-right">
                                        <div class="row">
                                            <form action="~/Assessments/Activity" method="post">
                                                <div class="col-md-6 text-right">
                                                    <p class="text-right">Assessment History:</p>
                                                </div>
                                                <div class="col-md-6">
                                                    <select name="AssessmentDate" id="" onchange="this.form.submit()">
                                                        @if (ViewBag.AssessmentDates != null)
                                                        {
                                                            <option value="new">New</option>
                                                            foreach (var l_Date in (List<DateTime>)ViewBag.AssessmentDates)
                                                            {

                                                                if (Model.DateEntered == l_Date)
                                                                {
                                                                    <option value="@l_Date" selected>@l_Date</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@l_Date">@l_Date</option>
                                                                }
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                            </form>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-3"></div>
                                    <div>
                                        <input type="submit" form="AssessmentForm" class="btn btn-primary" value="Save" />
                                        @*<a href="#" class="btn btn-primary">Print PDF</a>*@
                                        @*<button class="btn btn-danger print" id="AA_PRINT" >Print PDF</button>*@
                                    </div>

                                </div>
                            </div>
                        </div>
                        <form action="~/Assessments/SubmitActivityAssessment" id="AssessmentForm" method="post">



                            @{
                                foreach (var l_Category in Model.Category)
                                {
                                    <div class="row">
                                        <div class="col-md-4">
                                            <table class="table table-bordered">
                                                <thead class="bg-primary">
                                                    <tr>
                                                        <th class="text-white text-center" colspan="4"> <!-- Hide the name @l_Category.EnglishName --></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td class="text-center"><b>P</b></td>
                                                        <td class="text-center"><b>C</b></td>
                                                        <td class="text-center"><b>W</b></td>
                                                        <td class="text-center"></td>
                                                    </tr>
                                                    @for (int index = 0; index < Model.ActivityAssessments.Where(m => m.Activity.Category.Id == l_Category.Id).Count(); index = index + 2)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <div class="form-check form-check-inline pads">
                                                                    @Html.RadioButtonFor(m => m.ActivityAssessments[index].Value, "P", new { @class = "form-check-input" })
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="form-check form-check-inline pads">
                                                                    @Html.RadioButtonFor(m => m.ActivityAssessments[index].Value, "C", new { @class = "form-check-input" })
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="form-check form-check-inline pads">
                                                                    @Html.RadioButtonFor(m => m.ActivityAssessments[index].Value, "W", new { @class = "form-check-input" })
                                                                </div>
                                                            </td>
                                                            <td>
                                                                @Html.HiddenFor(m => m.ActivityAssessments[index].Activity.Id)
                                                                @Model.ActivityAssessments.Where(m => m.Activity.Category.Id == l_Category.Id).ToList()[index].Activity.EnglishName
                                                            </td>
                                                        </tr>


                                                    }

                                                </tbody>
                                            </table>
                                        </div>

                                        <div class="col-md-4">
                                            <table class="table table-bordered">
                                                <thead class="bg-primary">
                                                    <tr>
                                                        <th class="text-white text-center" colspan="4"> <!-- Hide the name @l_Category.EnglishName --></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td class="text-center"><b>P</b></td>
                                                        <td class="text-center"><b>C</b></td>
                                                        <td class="text-center"><b>W</b></td>
                                                        <td class="text-center"></td>
                                                    </tr>
                                                    @for (int index2 = 1; index2 < Model.ActivityAssessments.Where(m => m.Activity.Category.Id == l_Category.Id).Count(); index2 = index2 + 2)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <div class="form-check form-check-inline pads">
                                                                    @Html.RadioButtonFor(m => m.ActivityAssessments[index2].Value, "P", new { @class = "form-check-input" })
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="form-check form-check-inline pads">
                                                                    @Html.RadioButtonFor(m => m.ActivityAssessments[index2].Value, "C", new { @class = "form-check-input" })
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="form-check form-check-inline pads">
                                                                    @Html.RadioButtonFor(m => m.ActivityAssessments[index2].Value, "W", new { @class = "form-check-input" })
                                                                </div>
                                                            </td>
                                                            <td>
                                                                @Html.HiddenFor(m => m.ActivityAssessments[index2].Activity.Id)
                                                                @Model.ActivityAssessments.Where(m => m.Activity.Category.Id == l_Category.Id).ToList()[index2].Activity.EnglishName
                                                            </td>
                                                        </tr>


                                                    }

                                                </tbody>
                                            </table>
                                        </div>

                                    </div>




                                    <br><br>
                                }
                            }






                            <br>
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="" class="col-form-label">Comments :</label>
                                    @Html.TextAreaFor(m => m.Comment, new { @class = "textarea", name = "Comment", rows = "5", style = "max-width:100% !important" })
                                </div>
                                <div class="col-md-4">
                                    <label for="" class="col-form-label">Suggest Activity Events :</label>
                                    @Html.TextAreaFor(m => m.SAE, new { @class = "textarea", name = "SAE", rows = "5", style = "max-width:100% !important" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-8"></div>
                                <div class="col-md-4">
                                    <div class="row">
                                        <div class="col-md-3"></div>
                                        <div><input type="submit" form="AssessmentForm" class="btn btn-primary" value="Save" /></div>
                                        @*<div><input type="button" onclick="window.location='/Assessments/';"  class="btn btn-primary" value="Back" style="margin-left:6%;"/></div>*@
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>


                <!-- END PLACE PAGE CONTENT HERE -->
            </div>
            <!-- END CONTAINER FLUID -->
        </div>
        <!-- END PAGE CONTENT -->


        @RenderPage("~/Views/Shared/_Footer.cshtml")

<script>
    $('input[type="radio"]').mousedown(function (e) {
        var $self = $(this);
        if ($self.is(':checked')) {
            var uncheck = function () {
                setTimeout(function () { $self.removeAttr('checked'); }, 0);
            };
            var unbind = function () {
                $self.unbind('mouseup', up);
            };
            var up = function () {
                uncheck();
                unbind();
            };
            $self.bind('mouseup', up);
            $self.one('mouseout', unbind);
        }
    });
</script>