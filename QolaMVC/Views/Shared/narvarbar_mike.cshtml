<!-- START HEADER -->


<style>
    .mike_ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
    }

    .mike_li {
        float: left;
    }

    .mike_li a {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
    }

    .mike_li a:hover {
        background-color: #111;
    }
</style>
<script>
    function master_click() {
        if (document.getElementById("master_ul").style.display == "none") {
            document.getElementById("master_ul").style.display = "block";
        }
        else {
            document.getElementById("master_ul").style.display = "none";
        }
    }
</script>

<div class="header ">
    <!-- START MOBILE SIDEBAR TOGGLE -->
    <a href="#" class="btn-link toggle-sidebar hidden-lg-up pg pg-menu" data-toggle="sidebar">
    </a>
    <!-- END MOBILE SIDEBAR TOGGLE -->
    <div class="">
        <div class="brand inline">
            <img src="/Content/assets/img/qola_logo.png" alt="qola_logo" data-src="/Content/assets/img/qola_logo.png" data-src-retina="/Content/assets/img/qola_logo.png" width="40" height="40">
            <span>
                <!-- <h2 class="d-inline-block mt-1">Qola</h2> -->
            </span>
        </div>
        <!-- START NOTIFICATION LIST -->
        <ul class="hidden-md-down notification-list no-margin hidden-sm-down b-grey b-l b-r no-style p-l-30 p-r-20">
            <li class="p-r-10 inline">
                <a href="#" class="header-icon pg pg-link"></a>
            </li>
            <li class="p-r-10 inline">
                <a href="#" class="header-icon pg pg-thumbs"></a>
            </li>
        </ul>
        <!-- END NOTIFICATIONS LIST -->
        <!-- <a href="#" class="search-link hidden-md-down" data-toggle="search"><i class="pg-search"></i>Type anywhere to <span class="bold">search</span></a> -->
    </div>



    <div>
        <!-- BEGIN SIDEBAR MENU ITEMS-->
        <ul class="mike_ul">
            <li class="mike_li">
                <div style="display:inline-block;">
                    <a href="/Home/">
                        <span class="title">Homes</span>
                    </a>
                </div>
                <div style="display:inline-block;">
                    <span class="icon-thumbnail " style="top:1vw;"><i class="pg-home"></i></span>
                </div>
            </li>
            @{
                if (ViewBag.Home != null)
                {
                    <li class="mike_li">
                        <div style="display:inline-block;">
                            <a href="/Home/Menu/?p_HomeId=@ViewBag.Home.Id" class="detailed">
                                <span class="title">Dashboard</span>
                            </a>
                        </div>
                        <div style="display:inline-block;">
                            <span class="icon-thumbnail " style="top:1vw;"><i class="fa fa-dashboard"></i></span>
                        </div>
                    </li>
                }
            }

            @{
                if (ViewBag.Resident != null)
                {
                    <li class="mike_li">
                        <div style="display:inline-block;">
                            <a href="/Home/ResidentMenu/?p_ResidentId=@ViewBag.Resident.ID" class="detailed">
                                <span class="title">Profile</span>
                            </a>
                        </div>
                        <div style="display:inline-block;">
                            <span class="icon-thumbnail " style="top:1vw;"><i class="fa fa-user"></i></span>
                        </div>
                    </li>
                }
            }

            @*<li class="">
                    <a href="#">
                        <span class="title">Todo List</span>
                    </a>
                    <span class="icon-thumbnail "><i class="pg-social"></i></span>
                </li>*@
            <li class="mike_li">
                <div style="display:inline-block;">
                    <a href="#" onclick="master_click()">
                        <span class="title">Masters</span>
                        <span class=" arrow"></span>
                    </a>
                </div>
                <div style="display:inline-block;">
                    <span class="icon-thumbnail" style="top:1vw;"><i class="pg-grid"></i></span>
                </div>
                <ul class="mike_ul_2" id="master_ul"  style="display:none;margin-top:50vw;">
                    <li class="mike_li_2">
                        <a href="~/Master/Users">Users</a>
                        <span class="icon-thumbnail"></span>
                    </li>
                    <li class="mike_li_2">
                        <a href="~/Allergy/List">Allergy</a>
                        <span class="icon-thumbnail">sp</span>
                    </li>
                    <li class="mike_li_2">
                        <a href="~/Master/ActivityCategory">Activity Category</a>
                        <span class="icon-thumbnail">sp</span>
                    </li>
                    <li class="mike_li_2">
                        <a href="~/Master/Activity">Activity</a>
                        <span class="icon-thumbnail">sp</span>
                    </li>
                    <li class="mike_li_2">
                        <a href="~/DineTime/List">Dine Time</a>
                        <span class="icon-thumbnail">sp</span>
                    </li>
                    <li class="mike_li_2">
                        <a href="~/SpecialDiet/List">Special Diet</a>
                        <span class="icon-thumbnail">sp</span>
                    </li>
                    <li class="mike_li_2">
                        <a href="~/Suite/List">Suite</a>
                        <span class="icon-thumbnail">sp</span>
                    </li>
                    <li class="mike_li_2">
                        <a href="~/Venue/List">Venue</a>
                        <span class="icon-thumbnail">sp</span>
                    </li>
                </ul>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>




    <div class="d-flex align-items-center">
        <!-- START User Info-->
        <div class="dropdown pull-right hidden-md-down">

            <button class="profile-dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <div class="pull-left p-r-10 fs-14 font-heading hidden-md-down">
                    Welcome
                    @{
                        if (ViewBag.User != null)
                        {
                            <span class="semi-bold">@ViewBag.User.FirstName </span>
                            <span class="text-master">@ViewBag.User.LastName</span>
                        }
                    }
                </div>
                @*<span class="thumbnail-wrapper d32 circular inline">

                        <img src="/Content/assets/img/profiles/avatar.jpg" alt="" data-src="/Content/assets/img/profiles/avatar.jpg" data-src-retina="/Content/assets/img/profiles/avatar.jpg" width="32" height="32">
                    </span>*@
            </button>
            <div class="dropdown-menu dropdown-menu-right profile-dropdown" role="menu">
                <a href="#" class="dropdown-item"><i class="pg-settings_small"></i> Settings</a>
                @*<a href="#" class="dropdown-item"><i class="pg-outdent"></i> Feedback</a>
                    <a href="#" class="dropdown-item"><i class="pg-signals"></i> Help</a>*@
                <a href="~/Login" class="clearfix bg-master-lighter dropdown-item">
                    <span class="pull-left">Logout</span>
                    <span class="pull-right"><i class="pg-power"></i></span>
                </a>
            </div>
        </div>
        <!-- END User Info-->
        <!-- <a href="#" class="header-icon pg pg-alt_menu btn-link m-l-10 sm-no-margin d-inline-block" data-toggle="quickview" data-toggle-element="#quickview"></a> -->
    </div>
</div>
<!-- END HEADER -->
