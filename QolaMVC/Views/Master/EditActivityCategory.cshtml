@model QolaMVC.Models.ActivityCategoryModel

@RenderPage("~/Views/Shared/_Header.cshtml")
@RenderPage("~/Views/Shared/_SideBar.cshtml")
<script src="~/Content/jscolor/jscolor.js"></script>
<style>

    .form-tabs .nav-link {
        font-size: 1rem;
    }

    .modal-xlg {
        width: 900px !important;
        max-width: 1000px !important;
    }
</style>
<!-- START PAGE-CONTAINER -->
<div class="page-container">

    @RenderPage("~/Views/Shared/_NavBar.cshtml")

    <div class="page-content-wrapper">
        <!-- START PAGE CONTENT -->
        <div class="content">
            <!-- START JUMBOTRON -->
            <div class="jumbotron w-100" style="position: fixed; z-index: 400">
                <div class="container-fluid container-fixed-lg">
                    <!-- <div class="inner"> -->
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h3>Edit Activity Category</h3>
                        </div>

                    </div>
                    <!-- </div> -->
                </div>
            </div>
            <!-- END JUMBOTRON -->

            <div style="height: 60px;"></div>

            <!-- START CONTAINER FLUID -->
            <div class="container-fluid container-fixed-lg">
                <!-- BEGIN PlACE PAGE CONTENT HERE -->


                <div class="card">
                    <div class="card-block">

                        <div class="row">
                            <div class="col-md-8 offset-md-2">
                                @using (Html.BeginForm("EditActivityCategory", "Master", new { p_ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "p-t-15", @role = "form" }))
                                {
                                    <div class="row">

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="staticEmail" class="col-form-label">Category name (English)</label>
                                                @Html.TextBoxFor(m => m.EnglishName, new { @class = "form-control" })
                                                @Html.HiddenFor(m => m.Id, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="staticEmail" class="col-form-label">Category name (French)</label>
                                                @Html.TextBoxFor(m => m.FrenchName, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="staticEmail" class="col-form-label">Memory Care Color</label>
                                                @*<input type="color" class="form-control" id="exampleInputAmount" name="MemoryCareColor" value="@Model.MemoryCareColor">*@
                                                <input class="jscolor {hash:true} jscolor-active form-control" name="MemoryCareColor" id="exampleInputAmount" value="@Model.MemoryCareColor" autocomplete="off" style="background-image: none;">
                                            </div>
                                        </div>

                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <input type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("ActivityCategory", "Master")'" value="Back">
                                            <button class="btn btn-danger btn-lg">UPDATE</button>
                                            @*<input type="reset" class="btn btn-danger btn-lg" value="CLEAR">*@
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>


                <!-- END PLACE PAGE CONTENT HERE -->
            </div>
            <!-- END CONTAINER FLUID -->
        </div>
        <!-- END PAGE CONTENT -->




        @RenderPage("~/Views/Shared/_Footer.cshtml")
