@model QolaMVC.Models.ActivityModel

@RenderPage("~/Views/Shared/_Header.cshtml")
@RenderPage("~/Views/Shared/_SideBar.cshtml")
<script src="~/Content/jscolor/jscolor.js"></script>
<style>

    .form-tabs .nav-link {
        font-size: 1rem;
    }

    .modal-xlg {
        width: 900px !important;
        max-width: 1000px !important;
    }
</style>
<!-- START PAGE-CONTAINER -->
<div class="page-container">

    @RenderPage("~/Views/Shared/_NavBar.cshtml")

    <div class="page-content-wrapper">
        <!-- START PAGE CONTENT -->
        <div class="content">
            <!-- START JUMBOTRON -->
            <div class="jumbotron w-100" style="position: fixed; z-index: 400">
                <div class="container-fluid container-fixed-lg">
                    <!-- <div class="inner"> -->
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h3>@QolaMVC.Resources.Text.AddActivity</h3>
                        </div>

                    </div>
                    <!-- </div> -->
                </div>
            </div>
            <!-- END JUMBOTRON -->

            <div style="height: 60px;"></div>

            <!-- START CONTAINER FLUID -->
            <div class="container-fluid container-fixed-lg">
                <!-- BEGIN PlACE PAGE CONTENT HERE -->


                <div class="card">
                    <div class="card-block">

                        <div class="row">
                            <div class="col-md-8 offset-md-2">
                                @using (Html.BeginForm("AddActivity", "Master", new { p_ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "p-t-15", @role = "form",enctype = "multipart/form-data" }))
                                {
                                <div class="row">

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="staticEmail" class="col-form-label">@QolaMVC.Resources.Text.Category</label>
                                            <select name="Category" class="form-control">
                                                @{
                                                    foreach (var l_Cat in (List<QolaMVC.Models.ActivityCategoryModel>)ViewBag.Categories)
                                                    {
                                                        <option value="@l_Cat.Id">@l_Cat.EnglishName</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="staticEmail" class="col-form-label">@QolaMVC.Resources.Text.Province</label>
                                            <select name="Province" class="form-control" style="height:25px;width:85%;">
                                                <option value="National">National</option>
                                                <option value="Alberta">Alberta</option>
                                                <option value="British Columbia">British Columbia</option>
                                                <option value="Manitoba">Manitoba</option>
                                                <option value="New Brunswick">New Brunswick</option>
                                                <option value="Newfoundland and Labrador">Newfoundland and Labrador</option>
                                                <option value="Northwest Territories">Northwest Territories</option>
                                                <option value="Nova Scotia">Nova Scotia</option>
                                                <option value="Nunavut">Nunavut</option>
                                                <option value="Ontario">Ontario</option>
                                                <option value="Prince Edward Island">Prince Edward Island</option>
                                                <option value="Quebec">Quebec</option>
                                                <option value="Saskatchewan">Saskatchewan</option>
                                                <option value="Yukon">Yukon</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="staticEmail" class="col-form-label">@QolaMVC.Resources.Text.Name_en</label>
                                            @Html.TextBoxFor(m => m.EnglishName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="staticEmail" class="col-form-label">@QolaMVC.Resources.Text.Name_fr</label>
                                            @Html.TextBoxFor(m => m.FrenchName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="staticEmail" class="col-form-label">@QolaMVC.Resources.Text.FunPicture</label>
                                            @*@Html.TextBoxFor(m => m.FunPicture, new { @class = "form-control",type="file" })*@
                                            <input type="file" name="FileUpload" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="staticEmail" class="col-form-label">@QolaMVC.Resources.Text.Color</label>
                                            @*<input type="color" class="form-control" id="exampleInputAmount" name="Color">*@
                                            <input class="jscolor {hash:true} jscolor-active form-control" name="Color" id="exampleInputAmount" value="" autocomplete="off" style="background-image: none;">
                                        </div>
                                    </div>


                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="staticEmail" class="col-form-label">@QolaMVC.Resources.Text.ShowThisInAssessment</label>
                                            @Html.CheckBoxFor(m => m.ShowInAssessment)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="staticEmail" class="col-form-label">@QolaMVC.Resources.Text.ActivityDisplayTitleEx</label>
                                            @Html.TextBoxFor(m => m.DisplayTitle, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <input type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Activity", "Master")'" value="@QolaMVC.Resources.Text.Back_big">
                                            <button class="btn btn-danger btn-lg">@QolaMVC.Resources.Text.Save_big</button>
                                            @*<input type="reset" class="btn btn-danger btn-lg" value="CLEAR">*@
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>


                <!-- END PLACE PAGE CONTENT HERE -->
            </div>
            <!-- END CONTAINER FLUID -->
        </div>
        <!-- END PAGE CONTENT -->




        @RenderPage("~/Views/Shared/_Footer.cshtml")
