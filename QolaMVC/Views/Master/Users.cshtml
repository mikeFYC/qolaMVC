@model List<QolaMVC.Models.UserModel>

@RenderPage("~/Views/Shared/_Header.cshtml")
@RenderPage("~/Views/Shared/_SideBar.cshtml")

<style>
    .form-tabs .nav-link {
        font-size: 1rem;
    }

    .modal-xlg {
        width: 900px !important;
        max-width: 1000px !important;
    }
</style>

<!-- START PAGE-CONTAINER -->
<div class="page-container">

    @RenderPage("~/Views/Shared/_NavBar.cshtml")
    <!-- START PAGE CONTENT WRAPPER -->
    <div class="page-content-wrapper">
        <!-- START PAGE CONTENT -->
        <div class="content">
            <!-- START JUMBOTRON -->
            <div class="jumbotron w-100" style="position: fixed; z-index: 400">
                <div class="container-fluid container-fixed-lg">
                    <!-- <div class="inner"> -->
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h3>User</h3>
                        </div>
                    </div>
                    <!-- </div> -->
                </div>
            </div>
            <!-- END JUMBOTRON -->

            <div style="height: 60px;"></div>

            <!-- START CONTAINER FLUID -->
            <div class="container-fluid container-fixed-lg">
                <!-- BEGIN PlACE PAGE CONTENT HERE -->

                <div class="card">
                    <div class="card-block">

                        <div class="form-tabs mt-4">
                            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="pills-active-tab" data-toggle="pill" href="#pills-active" role="tab" aria-controls="pills-active" aria-selected="true">Active User</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="pills-achive-tab" data-toggle="pill" href="#pills-achive" role="tab" aria-controls="pills-achive" aria-selected="false">Achive User</a>
                                </li>

                            </ul>
                            <div class="tab-content" id="pills-tabContent">
                                <div class="tab-pane fade show active" id="pills-active" role="tabpanel" aria-labelledby="pills-active-tab">

                                    <div class="row">
                                        <div class="col-md-6 py-4 text-left">
                                            <form class="form-inline">
                                                <div class="form-group pr-1">
                                                    <div class="input-group">
                                                        <select class="form-control">
                                                            <option>All fields</option>
                                                            <option>First Name</option>
                                                            <option>Last Name</option>
                                                            <option>Suite No</option>
                                                            <option>Emergency Contact</option>
                                                            <option>Physician</option>
                                                        </select>
                                                    </div>
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" id="exampleInputAmount" placeholder="Search for">
                                                    </div>
                                                </div>
                                                <button type="submit" class="btn btn-danger">Search</button>
                                            </form>
                                        </div>
                                        <div class="py-4"><label class="form-check-label" style="font-weight:bold;color:black;font-size:1.2vw;margin-top:10%;">Page: </label></div>
                                        <div class="col-md-2 py-4 text-right">
                                            
                                            <select class="form-control" id="selectpage" onchange="formsubmit(this)">
                                                <option value="0">-- Select Page --</option>
                                                @{
                                                    for (int gg = 1; gg < Math.Ceiling(Decimal.Parse((Model.Count() / 50.0).ToString())); gg++)
                                                    {
                                                        <option value="@gg">@gg.ToString()</option>
                                                    }
                                                }

                                            </select>
                                        </div>
                                        <div class="col-md-3 py-4 text-right">
                                            <a class="btn btn-lg btn-primary" href="~/Master/AddUser">Add New</a>
                                        </div>
                                    </div>
                                    
                                    <table class="table table-bordered">
                                        <thead class="bg-primary">
                                            <tr>
                                                <th class="text-white">USER TYPE</th>
                                                <th class="text-white">User Name</th>
                                                <th class="text-white">First Name</th>
                                                <th class="text-white">Last Name</th>
                                                <th class="text-white">Home</th>
                                                <th class="text-white">Mobile</th>
                                                <th class="text-white">E-mail</th>
                                                <th class="text-white">Edit</th>
                                                <th class="text-white">Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var start = int.Parse(TempData["start"].ToString());
                                                for (var ind = start*50; ind < (start+1)*50; ind++)
                                                {
                                                    if (ind < Model.Count())
                                                    {
                                                        <tr>
                                                            <td class="align-middle">@Model[ind].UserTypeName</td>
                                                            <td class="align-middle">@Model[ind].UserName</td>
                                                            <td class="align-middle">@Model[ind].FirstName</td>
                                                            <td class="align-middle">@Model[ind].LastName</td>
                                                            <td class="align-middle">@Model[ind].HomeName</td>
                                                            <td class="align-middle">@Model[ind].Mobile</td>
                                                            <td class="align-middle">@Model[ind].Email</td>
                                                            <td class="align-middle">
                                                                <button class="btn btn-default btn-xs">
                                                                    <i class="fa fa-pencil"></i>
                                                                </button>
                                                            </td>
                                                            <td class="align-middle">
                                                                <button class="btn btn-danger btn-xs">
                                                                    <i class="fa fa-trash-o"></i>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                        }
                                                    }
                                                }
                                        </tbody>
                                    </table>

                                </div>
                                <div class="tab-pane fade" id="pills-achive" role="tabpanel" aria-labelledby="pills-achive-tab">


                                    <div class="row">
                                        <div class="col-md-6 py-4 text-left">
                                            <form class="form-inline">
                                                <div class="form-group pr-1">
                                                    <div class="input-group">
                                                        <select class="form-control">
                                                            <option>All fields</option>
                                                            <option>First Name</option>
                                                            <option>Last Name</option>
                                                            <option>Suite No</option>
                                                            <option>Emergency Contact</option>
                                                            <option>Physician</option>
                                                        </select>
                                                    </div>
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" id="exampleInputAmount" placeholder="Search for">
                                                    </div>
                                                </div>
                                                <button type="submit" class="btn btn-danger">Search</button>
                                            </form>
                                        </div>
                                        <div class="col-md-6 py-4 text-right">
                                            @*<a class="btn btn-lg btn-primary" href="#">Add New</a>*@
                                        </div>
                                    </div>

                                    <table class="table table-bordered">
                                        <thead class="bg-primary">
                                            <tr>
                                                <th class="text-white">USER TYPE</th>
                                                <th class="text-white">User Name</th>
                                                <th class="text-white">First Name</th>
                                                <th class="text-white">Last Name</th>
                                                <th class="text-white">Home</th>
                                                <th class="text-white">Mobile</th>
                                                <th class="text-white">E-mail</th>
                                                <th class="text-white">Edit</th>
                                                <th class="text-white">Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                foreach (var l_User in (IEnumerable<QolaMVC.Models.UserModel>)ViewBag.InactiveUsers)
                                                {
                                                    <tr>
                                                        <td class="align-middle">@l_User.UserTypeName</td>
                                                        <td class="align-middle">@l_User.UserName</td>
                                                        <td class="align-middle">@l_User.FirstName</td>
                                                        <td class="align-middle">@l_User.LastName</td>
                                                        <td class="align-middle">@l_User.HomeName</td>
                                                        <td></td>
                                                        <td></td>
                                                        <td class="align-middle">
                                                            <button class="btn btn-default btn-xs">
                                                                <i class="fa fa-pencil"></i>
                                                            </button>
                                                        </td>
                                                        <td class="align-middle">

                                                            <button class="btn btn-danger btn-xs">
                                                                <i class="fa fa-trash-o"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                }
                                            }

                                        </tbody>
                                    </table>
                                    <input type="hidden" id="startID" value="@TempData["start"]"/>

                                </div>
                            </div>
                        </div>









                    </div>
                </div>


                <!-- END PLACE PAGE CONTENT HERE -->
            </div>
            <!-- END CONTAINER FLUID -->
        </div>
        <!-- END PAGE CONTENT -->
        @RenderPage("~/Views/Shared/_Footer.cshtml")


<script>

    $('#selectpage').val($('#startID').val());


    function formsubmit(ee) {
        var index = $('#selectpage').val();
        if (window.location.href.includes("?")) {
            var question_location = window.location.href.indexOf('?');
            window.location.href = window.location.href.substring(0, question_location) + '?index=' + index;
        }
        else {
            window.location.href = window.location.href + "?index=" + index;
        }

    }
</script>