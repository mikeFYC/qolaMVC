@model List<QolaMVC.Models.HomeModel>

@RenderPage("~/Views/Shared/_Header.cshtml")
@RenderPage("~/Views/Shared/_SideBar.cshtml")

<style>
    .form-tabs .nav-link {
        font-size: 1rem;
    }

    .modal-xlg {
        width: 900px !important;
        max-width: 1000px !important;
    }
</style>

<!-- START PAGE-CONTAINER -->
<div class="page-container">

    @RenderPage("~/Views/Shared/_NavBar.cshtml")
    <!-- START PAGE CONTENT WRAPPER -->
    <div class="page-content-wrapper">
        <!-- START PAGE CONTENT -->
        <div class="content">
            <!-- START JUMBOTRON -->
            <div class="jumbotron w-100" style="position: fixed; z-index: 400">
                <div class="container-fluid container-fixed-lg">
                    <!-- <div class="inner"> -->
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h3>@QolaMVC.Resources.Text.Buildings</h3>
                        </div>
                    </div>
                    <!-- </div> -->
                </div>
            </div>
            <!-- END JUMBOTRON -->

            <div style="height: 60px;"></div>

            <!-- START CONTAINER FLUID -->
            <div class="container-fluid container-fixed-lg">
                <!-- BEGIN PlACE PAGE CONTENT HERE -->

                <div class="card">
                    <div class="card-block">

                        <div class="form-tabs mt-4">
                            <div class="tab-content" id="pills-tabContent">
                                <div class="tab-pane fade show active" id="pills-active" role="tabpanel" aria-labelledby="pills-active-tab">

                                    <div class="row">
                                        <div class="py-4 text-left" style="display:inline-block;width:80%;">
                                            <form class="form-inline">
                                                <div class="form-group pr-1">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" id="exampleInputAmount1" placeholder="@QolaMVC.Resources.Text.Searchfor">
                                                    </div>
                                                </div>
                                                <button type="button" class="btn btn-danger" onclick="search_func()">@QolaMVC.Resources.Text.Search</button>
                                            </form>
                                        </div>
                                        <div class="py-4 text-right" style="display:inline-block;width:15%;">
                                            <a class="btn btn-lg btn-primary" href="~/Master/AddBuildings">@QolaMVC.Resources.Text.AddNew</a>
                                        </div>
                                    </div>

                                    <table class="table table-bordered">
                                        <thead class="bg-primary">
                                            <tr>
                                                <th class="text-white">@QolaMVC.Resources.Text.Province</th>
                                                <th class="text-white">@QolaMVC.Resources.Text.Name</th>
                                                <th class="text-white">@QolaMVC.Resources.Text.Code</th>
                                                <th class="text-white">@QolaMVC.Resources.Text.Address</th>
                                                <th class="text-white">@QolaMVC.Resources.Text.City</th>
                                                <th class="text-white">@QolaMVC.Resources.Text.numberofSuites</th>
                                                <th class="text-white">@QolaMVC.Resources.Text.Edit</th>
                                                <th class="text-white">@QolaMVC.Resources.Text.Delete_small</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                for (var ind = 0; ind < Model.Count(); ind++)
                                                {
                                                    <tr>
                                                        <td class="align-middle">@Model[ind].Province.Name</td>
                                                        <td class="align-middle">@Model[ind].Name</td>
                                                        <td class="align-middle">@Model[ind].Code</td>
                                                        <td class="align-middle">@Model[ind].Address</td>
                                                        <td class="align-middle">@Model[ind].City</td>
                                                        <td class="align-middle">@Model[ind].NumberOfSuites</td>
                                                        <td class="align-middle">
                                                            <button class="btn btn-default btn-xs" onclick="location.href='@Url.Action("EditBuildings", "Master",new { homeid = Model[ind].Id  })'">
                                                                <i class="fa fa-pencil"></i>
                                                            </button>
                                                        </td>
                                                        <td class="align-middle">
                                                            <button class="btn btn-danger btn-xs" onclick="delete_home(@Model[ind].Id,'@Model[ind].Name')">
                                                                <i class="fa fa-trash-o"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                    <input type="hidden" id="notice" value="@TempData["notice"]" />
                                </div>
                                
                            </div>
                        </div>









                    </div>
                </div>


                <!-- END PLACE PAGE CONTENT HERE -->
            </div>
            <!-- END CONTAINER FLUID -->
        </div>
        <!-- END PAGE CONTENT -->
        @RenderPage("~/Views/Shared/_Footer.cshtml")


        <script>

            if ($('#notice').val() != '') {
                tempAlert($('#notice').val(), 2000);
            }

            function tempAlert2(msg, id) {
                var el = document.createElement("div");
                el.setAttribute("style", "position:fixed;top:2%;left:31%;width:35vw;background-color:white;z-index:9999;color:black;padding:2vw 3vw 2vw 3vw;border-radius:1vw;font-size:1.2em;font-weight:bold;border:black solid;");
                el.innerHTML = "<img src=\"\/Content\/assets\/img\/qola_logo3.png\" style=\"width:120px;height:80px;display:inline-block\" \/><div style=\"margin-left:3vw;display:inline-block;width:50%;position:absolute;margin-top:2%;\">" + msg + "<\/div><div style='width:90%;margin-top:10px;'><button class='btn btn-primary pull-right' style='display:inline-block;' onclick='this.parentNode.parentNode.parentNode.removeChild(this.parentNode.parentNode);'>No<\/button><button class='btn btn-danger pull-right' style='display:inline-block;margin-right:10px' onclick=\"deleteHomeReturnTrue(this," + id + ")\">Yes<\/button><\/div>";
                document.body.appendChild(el);

            }

            function deleteHomeReturnTrue(ee, id) {
                ee.parentNode.parentNode.parentNode.removeChild(ee.parentNode.parentNode);
                var xx = scrollX;
                var yy = scrollY;
                $.get("/Master/DeleteBuildings", { homeid: id }, function (data) {
                    if (data == 1) {
                        tempAlert("Home Delete", 2000);
                        setTimeout(function () { location.reload(); }, 2000);
                    }
                    else {
                        tempAlert("Home Delete Failed", 2000);
                    }

                });
                

            }


            function delete_home(id,qq) {
                //if (confirm("Are You Sure About Delete Home: \n\n" + qq) == true) {
                //    $.get("/Master/DeleteBuildings", { homeid: ee }, function (data) {
                //        if (data == 1) {
                //            tempAlert("Home Delete", 2000);
                //            setTimeout(function () { location.reload(); }, 2000);
                //        }
                //        else {
                //            tempAlert("Home Delete Failed", 2000);
                //        }

                //    });
                //}
                tempAlert2("Are You Sure About Delete Home: \n\n" + qq, id);
            }

            function search_func() {
                var str = $('#exampleInputAmount1').val();
                window.location.href = "/Master/Buildings?str=" + str;
            }

        </script>


